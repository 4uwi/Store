<h1> Items </h1>


<div style="display: grid; grid-template-columns: 1fr 1fr 1fr;">
  <% @items.each do |item| %>
    <div style="border: black 1px solid;padding: 5px;">
    <h2> <%= item.name %> </h2>
    <h2> <%= item.description %> </h2>
    <h2> <%= item.price %> </h2>
    <% if user_signed_in? %>
    <% if current_user.admin? %>
      <p>
        <%= link_to 'Edit', edit_item_path(item) %> |
        <%= link_to 'Delete', item_path(item), data: {method: :delete, confirm: 'Delete item?'} %>
      </p>
    <% end %>
        <% end %>
      ы<!--   # TODO: добавить в корзину-->
    </div>
  <% end %>
</div>